<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Compte à rebours</title>
  <style>
    body {
      margin: 0;
      background: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .focus_module_countdown_timer {
      color: #fff;
      font-size: 64px;
      background: linear-gradient(90deg, #FF96BE 0%, #786ACD 25%, #4E5CD2 50%, #5377D4 75%, #64E4DD 100%);
      padding: 30px 25px 15px;
      border-radius: 15px;
      display: flex;
      justify-content: center;
      gap: 25px;
      align-items: center;
      flex-wrap: wrap;
    }
    .time-block {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .label {
      font-size: 15px;
      padding-top: 10px;
    }
  </style>
</head>
<body>
  <div class="focus_module_countdown_timer">
    <div class="time-block">
      <span id="days">00</span>
      <span class="label">Jours</span>
    </div>
    <div style="margin-bottom: auto;">:</div>
    <div class="time-block">
      <span id="hours">00</span>
      <span class="label">Heures</span>
    </div>
    <div style="margin-bottom: auto;">:</div>
    <div class="time-block">
      <span id="minutes">00</span>
      <span class="label">Minutes</span>
    </div>
  </div>

  <script>
    // Date de fin : 24 septembre 2025 à 11h00
    var countDownDate = new Date("Sep 24, 2025 11:00:00").getTime();

    var countdownfunction = setInterval(function () {
      var now = new Date().getTime();
      var distance = countDownDate - now;

      var days = Math.floor(distance / (1000 * 60 * 60 * 24));
      var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));

      document.getElementById("days").innerHTML = days >= 0 ? days : "00";
      document.getElementById("hours").innerHTML = hours >= 0 ? hours : "00";
      document.getElementById("minutes").innerHTML = minutes >= 0 ? minutes : "00";

      if (distance < 0) {
        clearInterval(countdownfunction);
      }
    }, 1000);
  </script>
</body>
</html>
